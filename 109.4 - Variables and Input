import java.io.*;
import java.util.Scanner;

public class Main {
  public static void main(String[] args) {
    //Variables
    double mark1;
    double mark2;
    double mark3;
    double mark4;
    double markTotal;
    double average;

    Scanner user_input = new Scanner(System.in);
    
    System.out.println("Enter mark 1: ");
    mark1 = user_input.nextDouble();
    System.out.println("Marks: " + mark1);
    
    System.out.println("Enter mark 2: ");
    mark2 = user_input.nextDouble();
    System.out.println("Marks: " + mark1 +", " + mark2);
    markTotal = mark1 + mark2;
    System.out.println("Mark total is " + markTotal);
    
    System.out.println("Enter mark 3: ");
    mark3 = user_input.nextDouble();
    System.out.println("Marks: " + mark1 +", " + mark2 + ", " + mark3);
    markTotal = mark1 + mark2 + mark3;
    System.out.println("Mark total is " + markTotal);
    
    System.out.println("Enter mark 4: ");
    mark4 = user_input.nextDouble();
    System.out.println("Marks: " + mark1 +", " + mark2 + ", " + mark3 + ", " + mark4);
    markTotal = mark1 + mark2 + mark3 + mark4;
    System.out.println("Mark total is " + markTotal);

    average = (mark1 + mark2 + mark3 + mark4)/4;
    System.out.println("The average is " + average);
  }
}
